<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td> <%= line_item.quantity %>&times;</td>
  <td>
  <% if line_item.product %>
    <%= line_item.product.title %>
  <% else %>
    <% puts "No line_item.product" %>
  <% end %>
  </td> 
  <td> <%= number_to_currency(line_item.total_price) %> </td>
</tr>